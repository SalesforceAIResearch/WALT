      "format": "free-text or 'lat, lon'",
      "required": true,
      "enum": null
    },
    {
      "name": "to_text",
      "type": "string",
      "format": "free-text or 'lat, lon'",
      "required": true,
      "enum": null
    },
    {
      "name": "profile",
      "type": "string",
      "format": null,
      "required": true,
      "enum": [
        "Bicycle (OSRM)",
        "Car (OSRM)",
        "Foot (OSRM)"
      ]
    },
    {
      "name": "step_count",
      "type": "number",
      "format": null,
      "required": false,
      "enum": null
    }
  ]
