            "elements": [
                {
                    "type": "input",
                    "purpose": "enter project name filter (Filter by name)"
                },
                {
                    "type": "button",
                    "purpose": "apply sort by user choice (e.g., Most stars)",
                    "options": [
                        "Most stars"
