        {
            "name": "search_orders",
            "start_url": "http://3.12.136.212:7780/admin/sales/order/",
            "description": "Filter and locate orders by user-provided criteria (keyword, date range, status, customer, totals) and export results if needed",
            "elements": [
                {
                    "type": "input",
                    "purpose": "global search box",
                    "options": [
                        "placeholder: Search"
                    ]
                },
                {
                    "type": "button",
                    "purpose": "open Filters panel / clear all active filters"
                },
                {
                    "type": "filters",
                    "purpose": "apply specific filters",
                    "options": [
                        "Invoice/Order Date (date range)",
                        "Grand Total (Base/Purchased) (number range)",
                        "Purchased From (store view): All Store Views, Default Store View",
                        "Invoice, Order #, Bill-to Name, Shipping/Billing Address, Customer Name, Email (text)",
                        "Status (multiselect): Canceled, Closed, Complete, Suspected Fraud, On Hold, Payment Review, PayPal Canceled Reversal, PayPal Reversed, Pending, Pending Payment, Pending PayPal, Processing",
                        "Customer Group (multiselect): NOT LOGGED IN, General, Wholesale, Retailer",
                        "Payment Method (multiselect): ACH Direct Debit, Apple Pay, Bank Transfer Payment, Cash On Delivery, Check / Money order, Credit Card, ... , Venmo"
                    ]
                },
                {
                    "type": "select",
                    "purpose": "Mass Actions",
                    "options": [
                        "Cancel",
                        "Hold",
                        "Unhold",
                        "Print Invoices",
                        "Print Packing Slips",
                        "Print Credit Memos",
                        "Print All",
                        "Print Shipping Labels"
                    ]
                },
                {
                    "type": "select",
                    "purpose": "Columns manager (22 available)"
                },
                {
                    "type": "select",
                    "purpose": "Export results",
                    "options": [
                        "CSV",
                        "Excel XML"
                    ]
                },
                {
                    "type": "link",
                    "purpose": "row action: View order"
                }
            ]
        },
